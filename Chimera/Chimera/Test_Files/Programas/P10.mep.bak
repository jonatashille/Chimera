include macros.asm
pilha SEGMENT PARA STACK 'STACK'
dw  100  dup(? )
pilha ENDS
dados   SEGMENT PARA 'DATA'
dw  10  dup(0)
buffer db 5 dup(' ')
mesg   db  10, ? , 11 dup(0)
dados   ENDS
procs   SEGMENT PARA 'DATA'
dw  32000 dup(0)
procs   ENDS
codigo  SEGMENT PARA 'CODE'
ASSUME SS : pilha, CS : codigo, DS : dados, ES : dados
inicio PROC  FAR
; ----------Inicio das Instrucoes MEPA
INPP
; ---------- Chama Procedimento/Funcao - MAIN
CHPR MAIN,1
DSVS FIM
R3:NADA
; ---------- Entrada Procedimento/Funcao
ENPR 1
; ---------- Alocacao de Memoria (5)
AMEM 5
CRVL 1,-8
ARMZ 1,0
CRVL 1,-7
ARMZ 1,1
CRVL 1,-6
ARMZ 1,2
CRVL 1,-5
ARMZ 1,3
CRVL 1,-4
ARMZ 1,4
; ---------- Inicio Leitura String
CRVL 1,0
IMPC
CRVL 1,1
IMPC
CRVL 1,2
IMPC
CRVL 1,3
IMPC
CRVL 1,4
IMPC
; ---------- Fim Leitura String
IMPE
; ---------- Desalocacao de Memoria (5)
DMEM 5
RTPR 1,1
; ---------- Fim/Retorno de Procedimento/Funcao
; ----------Inicio MAIN
MAIN:NADA
; ---------- Entrada Procedimento/Funcao
ENPR 1
; ---------- Alocacao de Memoria (5)
AMEM 5
; ---------- Inicio Armazenamento String
CRCT 'M'
ARMZ 1,0
CRCT 'a'
ARMZ 1,1
CRCT 'r'
ARMZ 1,2
CRCT 'i'
ARMZ 1,3
CRCT 'a'
ARMZ 1,4
; ---------- Fim Armazenamento String
; ---------- Inicio Carregamento String
CRVL 1,0
CRVL 1,1
CRVL 1,2
CRVL 1,3
CRVL 1,4
; ---------- Fim Carregamento String
; ---------- Chama Procedimento/Funcao - R3
CHPR R3,1
; ---------- Desalocacao de Memoria (5)
DMEM 5
RTPR 1,0
; ---------- Fim/Retorno de Procedimento/Funcao
FIM:NADA
PARA
; ----------Fim das Instrucoes MEPA
inicio  ENDP
codigo  ENDS
END    inicio
